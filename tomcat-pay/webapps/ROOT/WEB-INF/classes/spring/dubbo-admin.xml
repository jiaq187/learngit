<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd 
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd 
	http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.2.xsd 
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
	default-lazy-init="false">
	
	<context:annotation-config />
	<context:component-scan base-package="com.ddsc" />

	<dubbo:application name="ddsc-pay"  />
 
    <dubbo:registry protocol="zookeeper" address="10.0.100.110:2181,10.0.100.120:2181,10.0.100.130:2181,10.0.100.140:2181,10.0.100.150:2181" />
    <dubbo:protocol name="hessian" port="9083" server="servlet" serialization="hessian2" />
    
    <dubbo:monitor protocol="registry" />
    
    
    <dubbo:provider threads="120" timeout="90000" loadbalance="random" cluster="failover"/>
    
    <dubbo:consumer timeout="20000" loadbalance="random" cluster="failover"/>
 
	<import resource="classpath:spring/dubbo-server.xml" />
    <import resource="classpath:spring/dubbo-client.xml" />
    
	
</beans>